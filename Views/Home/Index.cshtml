@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IOptions<RequestLocalizationOptions> locOptions
@inject IViewLocalizer localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var culture = requestCulture?.RequestCulture?.Culture?.Name ?? "ar-SA";
    var imageMap = new Dictionary<string, string>
    {
        { "en-US", "images/logoen.png" },
        { "ar-SA", "images/logoar.png" }
    };
    var imagePath = imageMap.ContainsKey(culture) ? imageMap[culture] : imageMap["ar-SA"];

    ViewData["Title"] = "Home Page";
}

<div class="hero_area">
    <section class="slider_section ">
        <div class="container ">
            <div class="row">
                <div class="col-md-6 ">
                    <div class="detail-box">
                        <h1>
                            @localizer["ConferenceName"]
                        </h1>
                        <p>
                            @localizer["ConferenceTitle"]
                        </p>
                        <a class="nav-link" asp-controller="Contact" asp-action="ContactUs" target="_blank">@localizer["ContactUs"]</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="img-box">
                        <img src="@imagePath" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

