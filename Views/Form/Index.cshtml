﻿@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IOptions<RequestLocalizationOptions> locOptions
@inject IViewLocalizer localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}

<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container"><h2>@localizer["ContactUs"]</h2></div>
        <div class="row">
            <div class="col-md-6">
                <form id="contactForm" method="post" action="/send-email">
                <div>
                    <input type="text" id="name" name="name" placeholder="@localizer["Name"]" required>
                </div>
                <div>
                    <input type="email" id="email" name="email" placeholder="@localizer["Email"]" required>
                </div>
                <div>
                    <textarea id="message" name="message" placeholder="@localizer["Message"]" required></textarea>
                </div>
                <div class="d-flex ">
                    <button type="submit">@localizer["Submit"]</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>
